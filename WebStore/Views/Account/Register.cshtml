@model WebStore.ViewModels.Identity.RegisterViewModel

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2>Регистрация нового пользователя</h2>
                    <form asp-action="Register" asp-controller="Account" asp-antiforgery="true" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert-danger"></div>

                        <input asp-for="UserName" type="text" placeholder="Name"/>
                        <span asp-validation-for="UserName" class="alert-danger"></span>

                        <input asp-for="Password" placeholder="Password"/>
                        <span asp-validation-for="Password" class="alert-danger"></span>

                        <input asp-for="ConfirmPassword" placeholder="ConfirmPassword"/>
                        <span asp-validation-for="ConfirmPassword" class="alert-danger"></span>

                        <button class="btn btn-default">Регистрация</button>
                    </form>
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section><!--/form-->