@model Employee

<div class="container">
    <form asp-controller="Employees" asp-action="Create" method="post">
        <div class="row">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly"></div>
                
                <div class="form-group">
                    <label asp-for="SurName" class="form-group"></label>
                    <input asp-for="SurName" class="form-control"/>
                    <span asp-validation-for="SurName"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="FirstName" class="form-group"></label>
                    <input asp-for="FirstName" class="form-control"/>
                    <span asp-validation-for="FirstName"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Patronymic" class="form-group"></label>
                    <input asp-for="Patronymic" class="form-control"/>
                    <span asp-validation-for="Patronymic"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Age" class="form-group"></label>
                    <input asp-for="Age" class="form-control"/>
                    <span asp-validation-for="Age"></span>
                </div>
                
                <button type="submit" class="btn btn-default">Добавить</button>
            </div>
        </div>

    </form>

</div>